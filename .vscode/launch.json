    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach RMP App with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 4200,
            "sourceMaps": true,
            "url": "http://localhost:4200/"
        },
        {
            "name": "Launch RMP App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}/www",
            "sourceMaps": true
        }
    ]
}